{
    "name": "santwer/bearschedule",
    "type": "project",
    "description": "Simple and clear project management tool. With which it is possible to display one or more projects graphically. ",
    "keywords": [
        "framework",
        "laravel",
        "vuejs",
        "project management",
        "project",
        "management",
        "tool",
        "graphical",
        "timeline",
        "schedule",
        "gantt",
        "gantt chart",
        "planning",
        "planner"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0.1",
        "kg-bot/laravel-localization-to-vue": "^2.0",
        "laravel/framework": "^11.0",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^4.0",
        "lesstif/php-jira-rest-client": "^5.8",
        "maatwebsite/excel": "^3.1",
        "microsoft/microsoft-graph": "^1.19",
        "pusher/pusher-php-server": "^7.2",
        "ryangjchandler/laravel-cloudflare-turnstile": "^1.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.6",
        "spatie/laravel-ignition": "^2.0",
        "fzaninotto/faker": "dev-master",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
